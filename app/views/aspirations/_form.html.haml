= form_for @aspiration do |f|
  - if @aspiration.errors.any?
    #error_explanation
      %h2= "#{pluralize(@aspiration.errors.count, "error")} prohibited this aspiration from being saved:"
      %ul
        - @aspiration.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :aspiration
    = f.text_field :aspiration
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :end
    = f.datetime_select :end
  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :coin
    = f.number_field :coin
  .actions
    = f.submit 'Save'
